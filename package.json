{
  "name": "gift-card-api",
  "version": "1.0.0",
  "description": "Gift Card Issuing API for brands",
  "main": "server.ts",
  "scripts": {
    "start": "NODE_ENV=production ts-node server.ts",
    "start:js": "NODE_ENV=production node server.js",
    "dev": "NODE_ENV=development nodemon --exec ts-node server.ts",
    "dev:js": "NODE_ENV=development nodemon server.js",
    "dev:ts": "NODE_ENV=development nodemon --exec ts-node server.ts",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "db:populate": "ts-node scripts/populate-database.ts",
    "db:populate:clear": "ts-node scripts/populate-database.ts --clear",
    "db:seed:brands": "ts-node scripts/populate-database.ts --brands-only",
    "db:seed:users": "ts-node scripts/populate-database.ts --users-only",
    "db:truncate": "ts-node scripts/truncate-tables.ts",
    "db:truncate:keep-brands": "ts-node scripts/truncate-tables.ts --keep-brands"
  },
  "keywords": [
    "gift-card",
    "api",
    "express",
    "nodejs"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/http-status-codes": "^1.2.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.3.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "husky": "^9.1.7",
    "jest": "^30.1.1",
    "lint-staged": "^15.5.2",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  }
}
